{
  "name": "ai-chatbot",
  "version": "0.1.0",
  "private": true,
  "description": "Professional AI customer service chatbot for a financial institution with safety and HCI principles.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "echo 'No linter configured yet'",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "deploy:unix": "bash deploy.sh"
  },
  "engines": {
    "node": ">=18.17"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "openai": "^4.56.0",
    "pino": "^9.5.0",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/uuid": "^10.0.0",
    "pino-http": "^10.5.0",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.9"
  }
}
