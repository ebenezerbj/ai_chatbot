# Copy to .env and set your secrets
PORT=3000
LOG_LEVEL=info

# OpenAI (optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Azure Speech (preferred for Twi/Akan TTS)
# Get keys from Azure Portal > Speech service
# Region examples: eastus, westus, northeurope, westeurope
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
# Voice examples (Ghanaian English): en-GH-AkuaNeural, en-GH-AmaNeural
# If your resource supports Twi/Akan directly, set that voice name here
AZURE_SPEECH_VOICE=en-GH-AkuaNeural
# Optional: override full TTS endpoint if provided by Azure (otherwise REGION is used)
# AZURE_SPEECH_ENDPOINT=https://<region>.tts.speech.microsoft.com/cognitiveservices/v1

# Admin (optional)
# ADMIN_TOKEN=

# Knowledge base file (optional)
# KB_FILE=data/kb.json

# Handover (optional)
# Per-minute max submissions per IP
HANDOVER_RATE_MAX=5

# Notifications (optional)
# Webhook to receive handover events
# HANDOVER_WEBHOOK_URL=

# Ticketing webhook (generic)
# TICKETING_WEBHOOK_URL=

# Email via SMTP (optional)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=chatbot@example.com
# HANDOVER_EMAIL_TO=support@example.com
